{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "inlineSourceMap": true,
  "types": [
    "node",
    "mocha",
    "chai"
  ],
  "include": [
    "./src",
    "./test"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}